<style>
    .E00030 {
        top: 5%;
    }

    .lbWT {
        font-weight: 400;
    }

    .tblMultiRow th, td {
        text-align: center;
    }

    .text {
        padding-top: 7px;
    }

    span[class=k-input] {
        text-align: center;
    }

    .k-list-optionlabel {
        text-align: center;
    }

    .formFCPara label {
        font-weight: 400;
    }

    .formFCPara input {
        border: none;
