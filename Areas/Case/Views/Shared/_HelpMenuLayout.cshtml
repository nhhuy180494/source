@using DPDSP.Services
@{
    ViewBag.Title = "Help";
    Layout = "~/Areas/Case/Views/Shared/_CaseLayout.cshtml";
}

@section styles{
    <style>
        #left-menu .k-menu .k-state-highlight a {
            background-color: #25a0da;
            color: white;
            font-weight: bold;
        }

        /*#left-menu .k-state-highlight{

            }*/

        #left-menu .k-menu .k-link {
            color: black;
            font-weight: 500;
        }

        #left-menu .k-menu .k-state-default a:hover {
            color: #25a0da;
        }

        #left-menu .k-menu .k-state-highlight a:hover {
            color: white;
            background-color: #25a0da;
        }
    </style>
    @RenderSection("styles", required: false)
}

<div class="container" style="margin-top:-25px;">
    <nav style="margin-bottom: 0; ">
        <div class="sidebar" style="margin-top: 0;">
            <div class="sidebar-nav navbar-collapse ">
                <ul class="nav" id="side-menu">
                    <li> <a href="@Url.Action("Index","Help")" class="@Html.isLeftMenuActive("Index","Help")"><i class="glyphicon glyphicon-chevron-right"></i> FAQ</a> </li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="page-wrapper">
        @RenderBody()
    </div>
</div>

