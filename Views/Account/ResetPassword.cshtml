@model DPDSP.Models.ResetPasswordViewModel
@{
    ViewBag.Title = Resources.Langues.ResetPassword;
}

<div class="container">
    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>@Resources.Langues.ResetYourPassword</h4>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-3">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(model => model.Code)

        <div class="form-group">
            @Html.Label(Resources.Langues.Email, new { @class = "col-md-4 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label(Resources.Langues.Password, new { @class = "col-md-4 control-label" })
            <div class="col-md-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label(Resources.Langues.ConfirmPass, new { @class = "col-md-4 control-label" })
            <div class="col-md-4">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                <input type="submit" class="btn btn-success" value="@Resources.Langues.Reset" />
            </div>
        </div>
    }

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
